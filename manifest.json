{
  "manifest_version": 3,
  "name": "TabGuardian",
  "version": "0.1.0",
  "description": "Local-first session manager: snapshots, suspend and secure backups.",
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "icons/icon48.svg"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "scripting",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [],
  "optional_permissions": ["<all_urls>"], 
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}